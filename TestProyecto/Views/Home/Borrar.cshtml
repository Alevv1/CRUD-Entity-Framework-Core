@model TestProyecto.Models.Contacto

@{
    ViewData["Title"] = "Borrar";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-dark text-white">
                    <h3 class="card-title">Borrar Contacto</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center">¿Estás seguro que deseas borrar este contacto?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>
                        <dt class="col-sm-3">Teléfono:</dt>
                        <dd class="col-sm-9">@Model.Telefono</dd>
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        <dt class="col-sm-3">Fecha de Creación:</dt>
                        <dd class="col-sm-9">@Model.FechaCreacion.ToShortDateString()</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Borrar" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Borrar</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-backward"></i> Volver a la Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
