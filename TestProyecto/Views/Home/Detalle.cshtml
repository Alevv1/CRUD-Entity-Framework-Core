@model TestProyecto.Models.Contacto

@{
    ViewData["Title"] = "Detalle de contacto";
}

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">Detalle del Contacto</h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(m => m.Nombre):</strong> @Html.DisplayFor(m => m.Nombre)
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(m => m.Telefono):</strong> @Html.DisplayFor(m => m.Telefono)
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(m => m.Email):</strong> @Html.DisplayFor(m => m.Email)
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(m => m.FechaCreacion):</strong> @Html.DisplayFor(m => m.FechaCreacion)
                    </li>
                </ul>
                <div>
                    <a asp-action="Index" asp-controller="Home" class="btn">
                        <i class="fa-solid fa-backward"></i> Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
