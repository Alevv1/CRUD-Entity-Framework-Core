@model TestProyecto.Models.Contacto

@{
    ViewData["Title"] = "Detalle de contacto";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-dark text-white">
                    <h3 class="card-title">Detalle del Contacto</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Nombre:</strong> @Model.Nombre
                        </li>
                        <li class="list-group-item">
                            <strong>Teléfono:</strong> @Model.Telefono
                        </li>
                        <li class="list-group-item">
                            <strong>Email:</strong> @Model.Email
                        </li>
                        <li class="list-group-item">
                            <strong>Fecha de Creación:</strong> @Model.FechaCreacion.ToShortDateString()
                        </li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary"><i class="fa-solid fa-backward"></i> Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
