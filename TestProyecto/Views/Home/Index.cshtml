@using TestProyecto.Models
@model IEnumerable<Contacto>


@{
    ViewData["Title"] = "Lista de contactos";
}
<section class="container-fluid">
    <div class="text-center">
        <h3 class="text-center bg-danger rounded p-3">Este es un test para probar .NET</h3>
        <div class="row">
            <div class="offset-9 col-3 mb-3">
                <a asp-action="Crear" asp-controller="Home" class="btn btn-secondary d-block mx-auto">
                    <i class="fa-solid fa-plus"></i> Nuevo Usuario
                </a>
            </div>
        </div>
        <div class="row">
            <div class="offset-12">
                <div class="card border">
                    <div class="card-header bg-dark">
                        <h3 class="text-white">Lista de usuarios</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-bordered" id="tblUsuarios" width="100%">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                                            <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                            <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                                            <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(m => item.Id)</td>
                                                <td>@Html.DisplayFor(m => item.Nombre)</td>
                                                <td>@Html.DisplayFor(m => item.Telefono)</td>
                                                <td>@Html.DisplayFor(m => item.Email)</td>
                                                <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                                                <td>
                                                   <div class="">
                                                    <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square p-1"></i>Editar</a>
                                                    <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square p-1"></i>Detalle</a>
                                                        <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id"><i class="fa-solid fa-trash p-1"></i>Borrar</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>NO hay registros</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
