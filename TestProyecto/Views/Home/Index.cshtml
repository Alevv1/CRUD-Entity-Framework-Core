@using TestProyecto.Models
@model IEnumerable<Contacto>

@{
    ViewData["Title"] = "Lista de contactos";
}
<section class="container-fluid">
    <div class="text-center">
        <h3 class="text-center bg-secondary rounded p-3">CRUD .NET MVC</h3>
        <div class="row">
            <div class="col-md-6 offset-md-3 mb-3">
                <a asp-action="Crear" asp-controller="Home" class="btn btn-primary btn-lg btn-block">
                    <i class="fa-solid fa-plus"></i> Nuevo Usuario
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card border">
                    <div class="card-header bg-dark text-white">
                        <h3 class="card-title">Lista de usuarios</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>ID</th>
                                            <th>Nombre</th>
                                            <th>Teléfono</th>
                                            <th>Email</th>
                                            <th>Fecha de Creación</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Nombre</td>
                                                <td>@item.Telefono</td>
                                                <td>@item.Email</td>
                                                <td>@item.FechaCreacion.ToShortDateString()</td>
                                                <td>
                                                    <div class="btn-group" role="group" aria-label="Acciones">
                                                        <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id"><i class="fa-solid fa-edit"></i> Editar</a>
                                                        <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id"><i class="fa-solid fa-info-circle"></i> Detalle</a>
                                                        <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> Borrar</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="text-muted text-center">No hay registros.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

